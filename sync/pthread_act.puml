@startuml
start
:Initialize RWLock;
:Create Reader and Writer Threads;

partition Readers {
    :Acquire Read Lock;
    :Calculate sum, max, average, variance, stddev;
    :Release Read Lock;
    :Store Read Time;
}

partition Writers {
    :Acquire Write Lock;
    :Initialize and Validate Data;
    :Release Write Lock;
    :Store Write Time;
}

:Join Reader and Writer Threads;
:Calculate and Print Total Time;
stop
@enduml
